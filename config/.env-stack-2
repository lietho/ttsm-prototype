# Postfixes the stack to distinguish between stacks 1 and 2
STACK_POSTFIX=2
STACK_TTSM_PORT=3001
STACK_EVENTSTORE_TCP_PORT=1114
STACK_EVENTSTORE_HTTP_PORT=2114
STACK_RULE_EVALUATOR_PORT=4001

# Selects a consistency strategy for this stack
CONSISTENCY_STRATEGY=orbitdb-evm

# Only used in point-2-point consistency strategies
CONSISTENCY_P2P_PEER_URLS=http://host.docker.internal:3000

# Required for the EVM consistency strategy to work
CONSISTENCY_EVM_PEER_URLS=http://host.docker.internal:3000
CONSISTENCY_EVM_PROVIDER=ws://host.docker.internal:7545
CONSISTENCY_EVM_CLIENT_ADDRESS=0x40f7A8dc73B76ed5Bc2906ee6ce896eC2e4639C8
CONSISTENCY_EVM_CONTRACT_ADDRESS=0x3Cb0896309b6924D48ABE7411056214e91b37AAe

CONSISTENCY_EVM_CLIENT_ADDRESS=<CLIENT-ACCOUNT-ADDRESS>
CONSISTENCY_EVM_CONTRACT_ADDRESS=0x83aed74cbd26fcd24a295c81e5762fd45f121780
CONSISTENCY_EVM_PROVIDER=wss://goerli.infura.io/ws/v3/<INFURA-API-KEY>
CONSISTENCY_EVM_SIGNER_PRIVATE_KEY=<PRIVATE-KEY>

# Connection string for the event store
PERSISTENCE_SERVICE_URL=esdb://eventstore-${STACK_POSTFIX}:${STACK_EVENTSTORE_HTTP_PORT}?tls=false

# OrbitDB
PERSISTENCE_ORBITDB_ID=organization-b
PERSISTENCE_ORBITDB_IPFS_PORT=4202
PERSISTENCE_ORBITDB_IPFS_PORT_WS=4203

RULES_SERVICE_URL=esdb://eventstore-${STACK_POSTFIX}:${STACK_EVENTSTORE_HTTP_PORT}?tls=false
RULES_EVALUATOR_BASE_URL=http://host.docker.internal:${STACK_RULE_EVALUATOR_PORT}
